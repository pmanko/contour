<% @title = 'Change your password' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "Change my password", class: 'btn btn-primary' %>
      <%= render partial: 'contour/links' %>
    </div>
  </div>
<% end %>
